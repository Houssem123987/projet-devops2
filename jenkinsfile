pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "houssem128/projet-devops2:latest"
    }

    stages {
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo 'Pas de tests définis pour l’instant'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    // "SonarScanner" doit être configuré dans Jenkins
                    withSonarQubeEnv('Sonarqube') {
                        bat "${tool 'SonarScanner'}\\bin\\sonar-scanner.bat -Dsonar.login=devops-token"
                    }
                }
            }
        }

        stage('Build Docker') {
            steps {
                bat "docker build -t %DOCKER_IMAGE% ."
            }
        }

        stage('Push Dockerhub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'houssem128-dockerhub',
                                                 usernameVariable: 'DOCKER_USER',
                                                 passwordVariable: 'DOCKER_PASS')]) {
                    bat 'echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin'
                    bat "docker push %DOCKER_IMAGE%"
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline terminé'
        }
        success {
            echo 'Pipeline réussi !'
        }
        failure {
            echo 'Pipeline échoué !'
        }
    }
}
